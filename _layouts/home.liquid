---
layout: home
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JUGPH - Java User Group Philippines</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="src/js/index.js"></script>
    <link 
      rel="stylesheet" 
      href="src/css/main.css" 
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="bg-gray-900 text-white font-sans overflow-x-hidden">
    <!-- Scroll Progress Indicator -->
    <div class="scroll-indicator" id="scrollIndicator"></div>

    <!-- Animated Background -->
    <div class="fixed inset-0 z-0">
      <div
        class="absolute inset-0 bg-gradient-to-br from-gray-900 via-purple-900/20 to-gray-900"
      ></div>
      <div class="absolute inset-0 mesh-bg"></div>

      <!-- Floating Elements -->
      <div
        class="animate-float absolute top-20 left-10 text-6xl opacity-20 gradient-text"
      >
        <i class="fab fa-java"></i>
      </div>
      <div
        class="animate-float-delayed absolute top-40 right-20 text-4xl opacity-20 gradient-text"
      >
        <i class="fas fa-code"></i>
      </div>
      <div
        class="animate-float-delayed-2 absolute bottom-40 left-20 text-5xl opacity-20 gradient-text"
      >
        <i class="fas fa-laptop-code"></i>
      </div>
      <div
        class="animate-float absolute top-1/2 right-1/4 text-3xl opacity-10 gradient-text"
      >
        <i class="fas fa-microchip"></i>
      </div>
    </div>

    <!-- Header -->
    <header class="relative z-50 glass-morphism sticky top-0">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <div class="flex items-center space-x-6">
            <div
              class="text-3xl font-bold gradient-text font-display tracking-tight"
            >
              JUGPH
            </div>
            <div class="hidden md:block text-gray-300 font-medium font-display">
              Java User Group Philippines
            </div>
          </div>
          <nav class="hidden md:flex items-center space-x-8">
            <a
              href="#events"
              class="text-gray-300 hover:text-white font-medium transition-all duration-300 hover:scale-110"
              >Events</a
            >
            <a
              href="#about"
              class="text-gray-300 hover:text-white font-medium transition-all duration-300 hover:scale-110"
              >About</a
            >
            <a
              href="#community"
              class="text-gray-300 hover:text-white font-medium transition-all duration-300 hover:scale-110"
              >Community</a
            >
            <div class="gradient-border">
              <div class="gradient-border-inner">
                <a
                  href="https://www.meetup.com/java-user-group-ph/"
                  target="_blank"
                  class="px-6 py-3 rounded-lg font-bold text-white hover:text-gray-200 transition-all duration-300 magnetic-hover block"
                >
                  Join Meetup <i class="fas fa-external-link-alt ml-2"></i>
                </a>
              </div>
            </div>
          </nav>

          <!-- Mobile Menu Button -->
          <button class="md:hidden text-white text-2xl">
            <i class="fas fa-bars"></i>
          </button>
        </div>
      </div>
    </header>

    <!-- Section -->

    {% include hero.liquid %}
    {% include statistics.liquid %}
    {% include events.liquid %}
    {% include about.liquid %}
    {% include format.liquid %}
    {% include community.liquid %}
    {% include team.liquid %}
    {% include footer.liquid %}

    <!-- JavaScript for Interactive Features -->
    
    <script src="src/js/interactivefeatures.js"></script>

  </body>
</html>
