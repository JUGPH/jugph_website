<footer class="relative z-10 glass-morphism mt-32">
  <div class="max-w-7xl mx-auto px-4 py-20">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="col-span-1 md:col-span-2">
        <div class="text-4xl font-bold gradient-text font-display mb-6">
          {{ site.data.footer.header }}
        </div>
        <p
          class="text-gray-300 mb-8 max-w-lg text-lg leading-relaxed font-light"
        >
          {{ site.data.footer.subheader }}
        </p>
        <div class="flex space-x-6">
          <a
            href="https://github.com/JUGPH"
            target="_blank"
            class="text-gray-400 hover:text-white text-3xl magnetic-hover"
          >
            <i class="fab fa-github"></i>
          </a>
          <a
            href="https://www.meetup.com/java-user-group-ph/"
            target="_blank"
            class="text-gray-400 hover:text-white text-3xl magnetic-hover"
          >
            <i class="fab fa-meetup"></i>
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-white text-3xl magnetic-hover"
          >
            <i class="fab fa-twitter"></i>
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-white text-3xl magnetic-hover"
          >
            <i class="fab fa-linkedin"></i>
          </a>
        </div>
      </div>

      {% for feature in site.data.footer.footer %}
        <div>
          <h3 class="text-xl font-bold mb-6 text-white font-display">{{ feature.title }}</h3>
          <ul class="space-y-3 text-gray-300">
            <li>
              <a
                href="#"
                class="hover:text-white transition-colors hover:gradient-text"
              >
                {{- feature.option1 -}}
              </a>
            </li>
            <li>
              <a
                href="#"
                class="hover:text-white transition-colors hover:gradient-text"
              >
                {{- feature.option2 -}}
              </a>
            </li>
            <li>
              <a
                href="#"
                class="hover:text-white transition-colors hover:gradient-text"
              >
                {{- feature.option3 -}}
              </a>
            </li>
            <li>
              <a
                href="#"
                class="hover:text-white transition-colors hover:gradient-text"
              >
                {{- feature.option4 -}}
              </a>
            </li>
          </ul>
        </div>
      {% endfor %}
    </div>

    <div
      class="border-t border-gray-700 mt-16 pt-8 text-center text-gray-400"
    >
      <p class="text-lg">
        &copy; 2025 Java User Group Philippines. Made with
        <span class="text-red-400 animate-pulse">‚ù§</span> by the community.
      </p>
    </div>
  </div>
</footer>
