<section
  class="relative z-10 py-32 bg-gradient-to-r from-gray-900/50 to-purple-900/20"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2
        class="text-5xl md:text-6xl font-bold text-white mb-6 font-display"
      >
        {{ site.data.format.header }}
      </h2>
      <p class="text-2xl text-gray-300 font-light">{{ site.data.format.subheader }}</p>
    </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        {% for format in site.data.format.features %}
        <!-- Online -->
        <div class="neo-card rounded-3xl p-12 hover-lift">
          <h3
            class="text-4xl font-bold text-white mb-10 font-display gradient-text"
          >
            {{ format.header }}
          </h3>
          <ul class="space-y-6">
            <li class="flex items-start group">
              <div
                class="w-12 h-12 rounded-xl gradient-primary flex items-center justify-center mr-6 flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
              >
                <i class="fas fa-comments text-white"></i>
              </div>
              <span class="text-gray-300 text-lg leading-relaxed">{{ format.title1 }}</span>
            </li>
            <li class="flex items-start group">
              <div
                class="w-12 h-12 rounded-xl gradient-primary flex items-center justify-center mr-6 flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
              >
                <i class="fas fa-play text-white"></i>
              </div>
              <span class="text-gray-300 text-lg leading-relaxed">{{ format.title2 }}</span>
            </li>
            <li class="flex items-start group">
              <div
                class="w-12 h-12 rounded-xl gradient-primary flex items-center justify-center mr-6 flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
              >
                <i class="fas fa-code text-white"></i>
              </div>
              <span class="text-gray-300 text-lg leading-relaxed">{{ format.title3 }}</span>
            </li>
            <li class="flex items-start group">
              <div
                class="w-12 h-12 rounded-xl gradient-primary flex items-center justify-center mr-6 flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
              >
                <i class="fas fa-headset text-white"></i>
              </div>
              <span class="text-gray-300 text-lg leading-relaxed">{{ format.title4 }}</span>
            </li>
          </ul>
        </div>
    {% endfor %}
  </div>
</section>
