<section id="events" class="relative z-10 py-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2
            class="text-5xl md:text-6xl font-bold text-white mb-6 font-display"
          >
            {{  site.data.events.header }}
          </h2>
          <p
            class="text-2xl text-gray-300 max-w-4xl mx-auto font-light leading-relaxed"
          >
            {{  site.data.events.subheader }}
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
           {% for feature in site.data.events.features %}
          <!-- Featured Event -->
          <div class="neo-card rounded-3xl p-10 hover-lift group">
           
              <div class="flex items-center justify-between mb-6">
              
              <div class="gradient-border">
                <div class="gradient-border-inner">
                  <span
                    class="px-6 py-2 rounded-full text-sm font-bold text-white font-display"
                    >{{ feature.title }}</span
                  >
                </div>
              </div>
              <span
                class="text-gray-400 font-mono text-sm bg-gray-800 px-3 py-1 rounded-full"
                >{{  feature.date }}</span
              >
            </div>
            <h3
              class="text-3xl font-bold mb-6 text-white font-display group-hover:gradient-text transition-all duration-300"
            >
              {{  feature.header }}
            </h3>
            <p class="text-gray-300 mb-8 leading-relaxed text-lg">
              {{  feature.subheader }}
            </p>
            <div class="flex items-center text-gray-400 mb-8 text-lg">
              <i class="fas fa-map-marker-alt mr-3 gradient-text"></i>
              <span> {{ feature.place }}</span>
            </div>
            <div class="gradient-border w-fit">
              <div class="gradient-border-inner">
                <a
                  href="#"
                  class="px-8 py-4 rounded-lg font-bold text-white inline-block font-display magnetic-hover"
                >
                  {{feature.button }} <i class="fas fa-arrow-right ml-2"></i>
                </a>
              </div>
            </div>
         </div>
          {% endfor %}
        </div>
    </section>